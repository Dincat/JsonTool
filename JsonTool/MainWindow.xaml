<Window x:Class="JsonTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:view="clr-namespace:JsonTool.Views"
        mc:Ignorable="d" AllowDrop="True" x:Name="MainWin"
        Title="Json Tool" Height="450" Width="800">
    <Grid>
        <view:JsonView Margin="0,0,0,0" DataContext="{Binding ElementName=MainWin,Path=JsonViewDataContext}"/>
    </Grid>
</Window>
